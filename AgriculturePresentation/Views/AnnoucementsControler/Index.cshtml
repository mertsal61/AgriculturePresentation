@using EntityLayer.Concrete
@model List<Annoucement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif YAP</th>
                            <th>Pasif YAP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnoucementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Annoucement/DeleteAnnoucement/@item.AnnoucementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Annoucement/EditAnnoucement/@item.AnnoucementID" class="btn btn-outline-success">Düzenle</a></td>
                                <td><a href="/Annoucement/EditAnnoucement/@item.AnnoucementID" class="btn btn-outline-warning">Aktif YAP</a></td>
                                <td><a href="/Annoucement/EditAnnoucement/@item.AnnoucementID" class="btn btn-outline-secondary">Pasif YAP</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
            </div>
            <a href="/Annoucement/AddAnnoucement" class="btn btn-outline-info">Yeni  Duyuru Girişi</a>
        </div>
    </div>
</div>
